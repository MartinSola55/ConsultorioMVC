
@{
    ViewBag.Title = "Inicio";
}

<link href="~/Content/mis-estilos.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />

<h1 class="text-center">Pacientes</h1>

<label>Ingrese el nombre: </label>
<input type="text" id="filtroNombre" placeholder="Nombre del paciente" />
<br />
<label>Ingrese el apellido: </label>
<input type="text" id="filtroApellido" placeholder="Apellido del paciente" />
<br />

<label>Filtrar por obra social: </label>
<select id="filtroOS">

</select>
<input type="button" class="btn btn-outline-dark" id="limpia-filtro" value="Limpiar" />

<div id="tabla-clase" class="mt-4">

</div>

<button id="btnAgregar" type="button" class="btn btn-success px-4" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
    Agregar
</button>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body contenedor-modal">
                <label class="mb-2">ID: </label>
                <input id="txtID" type="text" class="limpiarCampo w-25 mb-2" disabled />
                <label class="mb-2 campo0">Nombre: </label>
                <input id="txtNombre" type="text" class="limpiarCampo habilitarCampo deshabilitarCampo required mb-2" />
                <label class="mb-2 campo1">Apellido: </label>
                <input id="txtApellido" type="text" class="limpiarCampo habilitarCampo deshabilitarCampo required mb-2" />
                <label class="mb-2 campo2">Teléfono: </label>
                <input id="txtTelefono" type="number" class="limpiarCampo habilitarCampo deshabilitarCampo required mb-2" />
                <label class="mb-2 campo4">Correo: </label>
                <input id="txtCorreo" type="email" class="limpiarCampo habilitarCampo deshabilitarCampo mb-2" />
                <label class="mb-2 campo3">Obra Social: </label>
                <input id="txtObraSocial" min="1" max="10" type="number" class="limpiarCampo habilitarCampo deshabilitarCampo required mb-2" />
            </div>
            <div class="modal-footer">
                <button id="btnCancelar" type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Cancelar</button>
                <button id="btnAceptar" onclick="confirmarCambios()" type="button" class="btn btn-success">Aceptar</button>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
<script src="~/Scripts/pacientes.js"></script>